<section class="login-form">
  <h1>Login</h1>

  <%= form_with(model: @user, url: login_path, method: :post) do |form| %>
    <% if flash[:alert] %>
      <div id="error_explanation">
        <h2><%= flash[:alert] %></h2>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :email %>
      <%= form.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>

    <div class="actions">
      <%= form.submit 'Login' %>
    </div>
  <% end %>
</section>
